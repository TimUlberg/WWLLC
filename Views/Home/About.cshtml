@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WealthWaveLLC</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
</head>
<body>
    <header class="py-3 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <img src="~/Images/icon.jpg" alt="WealthWaveLLC Logo" width="100">
                </div>
                <div class="col-md-8">
                    <p class="lead mb-0">WealthWaveLLC is a premier financial advisory firm committed to providing the highest level of financial guidance and personalized attention to each client.</p>
                </div>
            </div>
        </div>
    </header>
    <section id="services" class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Our Financial Services</h2>
            <div class="row">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-gavel fa-3x mb-3"></i>
                            <h5 class="card-title mb-3">Litigation</h5>
                            <p class="card-text">Our experienced litigators provide effective representation in state and federal courts.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-balance-scale fa-3x mb-3"></i>
                            <h5 class="card-title mb-3">Investment Planning</h5>
                            <p class="card-text">Our experienced financial advisors provide effective investment planning and portfolio management services.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-file-contract fa-3x mb-3"></i>
                            <h5 class="card-title mb-3">Retirement Planning</h5>
                            <p class="card-text">We provide comprehensive retirement planning and income distribution strategies to help you enjoy your golden years</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-user-shield fa-3x mb-3"></i>
                            <h5 class="card-title mb-3">Financial Advisory</h5>
                            <p class="card-text">Our advisors help clients navigate complex financial regulations and provide tailored investment solutions.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">About Us</h2>
            <p class="lead mb-5">WealthWave LLC is a premier financial advisory firm with over 50 years of combined experience in providing effective financial solutions to businesses and individuals. Our team of advisors is committed to providing the highest level of financial guidance and personalized attention to each client.</p>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="~/Images/ManagingPartner.jpg" alt="Team Member" class="card-img-top">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-3">John Doe</h5>
                            <p class="card-text">Managing Partner</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="~/Images/SeniorAssociate.jpg" alt="Team Member" class="card-img-top">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-3">Jane Smith</h5>
                            <p class="card-text">Senior Advisor</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <footer class="py-5 bg-dark text-light">
        <div class="container-fluid d-flex flex-column justify-content-between align-items-center">
            <div class="mb-3">
                <h3>Contact Us</h3>
                <ul class="list-unstyled">
                    <li><i class="fas fa-phone"></i> 123-1234</li>
                    <li><i class="fas fa-envelope"></i> info@wealthwave.co.nz</li>
                    <li><i class="fas fa-map-marker-alt"></i> 123 Main Street<br>Auckland, New Zealand 0000</li>
                </ul>
            </div>
            <div class="mt-auto">
                <p class="mb-0">&copy; WealthWave LLC 2023. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>